<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/rank"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="#"
        android:textColor="@color/colorAccent"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/avg"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="ER"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/wickets"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/avg"
        android:layout_toLeftOf="@+id/avg"
        android:text="wkts"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/runs"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/wickets"
        android:layout_toLeftOf="@+id/wickets"
        android:text="runs"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/maiden"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/runs"
        android:layout_toLeftOf="@+id/runs"
        android:textColor="@android:color/darker_gray"
        android:text="mai"
        android:gravity="center"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/overs"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/maiden"
        android:layout_toStartOf="@+id/maiden"
        android:gravity="center"
        android:text="overs"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/rank"
        android:layout_toRightOf="@+id/rank"
        android:text="name"
        android:textColor="@color/colorAccent"
        android:textStyle="italic" />

</RelativeLayout>