<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/rank"
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="5dp"
        android:text="#"
        android:textColor="@color/colorAccent"
        android:gravity="center"
        android:textStyle="italic"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/rank"
        android:layout_toRightOf="@id/rank"
        android:gravity="center"
        android:text="name"
        android:textColor="@color/colorAccent"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/rank"
        android:layout_toEndOf="@+id/rank"
        android:layout_toRightOf="@+id/rank"
        android:text="status"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/SR"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:text="SR" />

    <TextView
        android:id="@+id/sixes"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@+id/SR"
        android:layout_toLeftOf="@+id/SR"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:text="6s" />

    <TextView
        android:id="@+id/fours"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@+id/sixes"
        android:layout_toLeftOf="@+id/sixes"
        android:padding="5dp"
        android:textStyle="italic"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:text="4s" />

    <TextView
        android:id="@+id/balls"
        android:layout_width="35dp"
        android:padding="5dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toStartOf="@+id/fours"
        android:layout_toLeftOf="@+id/fours"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@android:color/darker_gray"
        android:text="BL" />

    <TextView
        android:id="@+id/score"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:layout_toLeftOf="@+id/balls"
        android:layout_toStartOf="@+id/balls"
        android:gravity="center"
        android:padding="5dp"
        android:text="SC"
        android:textColor="@android:color/darker_gray"
        android:textStyle="italic" />

</RelativeLayout>